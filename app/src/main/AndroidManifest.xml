<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.linenclub">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/lc_logo2"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".delivered_product_detail"></activity>
        <activity android:name=".delivered_products" />
        <activity android:name=".new_home" />
        <activity android:name=".profile" />
        <activity
            android:name=".Customer_Home"
            android:label="@string/title_activity_customer__home"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".signup" />
        <activity android:name=".product_details" />
        <activity android:name=".view_profile" />
        <activity android:name=".products" />
        <activity android:name=".feedback" />
        <activity android:name=".ip_address">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".home" />
        <activity android:name=".login" />
        <activity android:name=".MainActivity" />

        <uses-library
            android:name="org.apache.http.legacy"
            android:required="false" />
    </application>

</manifest>